<div class="body-main-product">
  <div class="main-product-imgandtext">
    <div class="product-imgandtext-img">
      <img src="" alt="">
    </div>
    <div class="product-imgandtext-text">
      <span><%= product.name%></span>
      <span>Ma: <%= product.id%></span>
    </div>
  </div>
  <div class="main-product-seemore">
    <button class="product-seemore-btn">Xem chi tiet &gt;&gt;</button>
  </div>
  <div class="main-product-price">
    <div class="product-price-old"><%= product.price %></div>
    <div class="product-price-current"><%= product.price %></div>
  </div>
  <div class="main-product-number">
    <label for="">So luong: </label>
    <%= form_with url: cart_path(id: product.id), method: :put, local: true do |f| %>
      <%= f.number_field :quantily, value: current_carts["#{product.id}"],
        max: product.quantity, min: 0, class: "form-control" %>
    </div>
    <div class="main-product-allprice">
      <span><%= total_price_book(product.id) %></span>
    </div>
    <div class="main-product-delete">
      <%= link_to cart_path(id: product.id), method: :delete,
        data: {confirm: t(".confirm_delete")} do %>
        <button class="product-delete-btn">Xoa</button>
      <% end %>
      <%= f.button type: :submit, class: "btn btn-info" do %>
        <% content_tag(:span, nil, class: "glyphicon glyphicon-refresh") %>
      <% end %>
    <% end %>
  </div>
</div>
