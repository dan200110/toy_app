<%= form_tag user_path(current_user), method: :put, multipart: true do %>
  <div class="col-md-4">
    <div id="box-avatar-edit">
      <%= avatar_image(@user.avatar, "img-thumbnail") %>
    </div>
    <%= file_field_tag :avatar, accept: Settings.user.image.image_path, id: "input-avatar" %>
  </div>
  <div class="col-md-8">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, @user.name, class: "form-control", id: "edit-name-account" %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, @user.email, class: "form-control", id: "edit-email-account" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, @user.password, class: "form-control", id: "edit-email-account" %>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation %>
        <%= password_field_tag :password_confirmation, @user.password_confirmation, class: "form-control", id: "edit-email-account" %>
      </div>
      <div class="form-group">
        <%= submit_tag t(".save"), class: "btn btn-info", id: "btn-submit-edit-account" %>
      </div>
  </div>
<% end %>
